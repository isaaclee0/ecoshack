---
import type { ImageMetadata } from "astro";
import { Picture } from "astro:assets";

// Props interface for the component
interface Props {
  src: string;
  alt: string;
  width: number;
  height: number;
  loading?: "eager" | "lazy" | null | undefined;
  decoding?: "async" | "auto" | "sync" | null | undefined;
  format?: "auto" | "avif" | "jpeg" | "png" | "svg" | "webp";
  quality?: number;
  class?: string;
  style?: any;
  widths?: number[];
  sizes?: string;
}

// Destructuring Astro.props to get the component's props
let {
  src,
  alt,
  width,
  height,
  loading,
  decoding,
  class: className,
  format = "webp",
  quality = 75,
  style,
  widths,
  sizes,
} = Astro.props;

src = `/public${src}`;

// Provide responsive defaults if not explicitly set
widths = widths ?? [400, 600, 800];
sizes = sizes ?? "(max-width: 768px) 90vw, (max-width: 1024px) 45vw, 33vw";

// Glob pattern to load images from the /public/images folder
const images = import.meta.glob(
  "/public/images/**/*.{jpeg,jpg,png,gif,svg}"
) as Record<string, () => Promise<{ default: ImageMetadata }>>;

// Check if the source path is valid
const isValidPath = images[src] ? true : false;
const imageModule = isValidPath ? await images[src]() : undefined;
const imageMeta: ImageMetadata | undefined = imageModule?.default;

// Log a warning message in red if the image is not found
!isValidPath &&
  console.error(
    `\x1b[31mImage not found - ${src}.\x1b[0m Make sure the image is in the /public/images folder.`,
  );
---

{
  isValidPath && (
    <Picture
      src={imageMeta!}
      alt={alt}
      widths={widths}
      sizes={sizes}
      formats={["webp", "jpeg"]}
      loading={loading}
      decoding={decoding}
      class={className}
      quality={quality}
      style={style}
      width={width}
      height={height}
    />
  )
}
