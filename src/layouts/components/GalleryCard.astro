---
import { markdownify } from "@/lib/utils/textConverter";
import type { CollectionEntry } from "astro:content";
import ImageMod from "./ImageMod.astro";

type Props = {
  item: CollectionEntry<"gallery">["data"]["gallery_images"][number];
  index: number;
};

const { item, index } = Astro.props;
---

<div
  data-aos="fade-up-sm"
  data-aos-delay={index * 100 + 100}
  class="relative group break-inside-avoid mb-2"
>
  <div class="overflow-hidden">
    <ImageMod
      src={item.image}
      height={0}
      width={0}
      loading="lazy"
      format="webp"
      quality={85}
      alt={item.design || 'Gallery image'}
      widths={[400, 600, 800, 1200]}
      sizes="(max-width: 768px) 80vw, (max-width: 1024px) 50vw, 33vw"
      class="group-hover:scale-105 transition-transform duration-300 ease-in-out"
    />
  </div>
</div>
